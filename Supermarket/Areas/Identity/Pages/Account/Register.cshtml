@page
@using Supermarket.RolesAndEmailSender
@model RegisterModel

<section class="h-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6">
                <div class="card shadow-lg border-0 my-4 rounded-4">
                    <div class="bg-gradient-header text-white py-4 px-4 rounded-top-4">
                        <div class="row align-items-center">
                            <div class="col-12 text-center">
                                <h2 class="mb-0 text-3xl text-black font-bold">Register User</h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-user fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.Name" placeholder="Name" aria-required="true" class="form-control form-control-lg rounded-pill" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill" placeholder="Email" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-map-marker-alt fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.StreetAdress" class="form-control form-control-lg rounded-pill" placeholder="Street Address" />
                                    <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-city fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.City" class="form-control form-control-lg rounded-pill" placeholder="City" />
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-flag fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.State" class="form-control form-control-lg rounded-pill" placeholder="State" />
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-phone fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.PhoneNumber" class="form-control form-control-lg rounded-pill" placeholder="Phone Number" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-lock fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-4">
                                <i class="fas fa-key fa-lg me-3 fa-fw text-gray-700"></i>
                                <div data-mdb-input-init class="form-outline flex-fill">
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg rounded-pill" placeholder="Confirm Password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                <div class="d-flex align-items-center mb-4">
                                    <i class="bi bi-award-fill fa-lg me-3 fa-fw text-gray-700"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill">
                                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control form-control-lg rounded-pill">
                                            <option disabled selected>- Select Role -</option>
                                        </select>
                                    </div>
                                </div>
                            }

                            <div class="d-flex justify-content-end pt-3">
                                <button id="registerSubmit" type="submit" class="btn bg-gradient-header btn-lg ms-2 rounded-pill px-5 py-3 shadow-sm text-white hover-scale-105 transition-all">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Consistent orange color variables */
    :root {
        --orange-main-color: rgb(234,80,28); /* The primary orange from your header */
        --orange-line-color: rgba(234,80,28,0.5); /* A lighter shade for the lines (if needed elsewhere) */
    }

    /* Consistent header background */
    .bg-gradient-header {
        background-color: var(--orange-main-color);
        /* You can add a subtle gradient if you want, similar to your previous header example: */
        /* background-image: linear-gradient(to right, rgba(234,80,28,0.8), rgb(234,80,28)); */
    }

    /* Consistent text colors */
    .text-gray-700 {
        color: #495057; /* Used for input icons */
    }

    .text-black {
        color: #000; /* For header text */
    }

    /* Consistent typography */
    .text-3xl {
        font-size: 1.875rem;
        line-height: 2.25rem;
    }

    .font-bold {
        font-weight: 700;
    }

    /* Consistent rounded corners */
    .rounded-4 {
        border-radius: 1rem !important;
    }

    .rounded-top-4 {
        border-top-left-radius: 1rem !important;
        border-top-right-radius: 1rem !important;
    }

    .rounded-pill {
        border-radius: 50rem !important; /* For buttons and inputs */
    }

    /* Consistent hover effect and transition */
    .hover-scale-105:hover {
        transform: scale(1.05);
    }

    .transition-all {
        transition-property: all;
        transition-duration: 200ms;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Adjust the general card shadow and padding */
    .card.shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important; /* Softer shadow */
    }

    .card-body.p-4 {
        padding: 1.5rem !important; /* Slightly more padding for the card body */
    }

    /* Styles for form controls to match the rounded pill style */
    .form-control.rounded-pill {
        border-radius: 50rem !important;
        padding-left: 1.25rem; /* Add some padding for the text */
        padding-right: 1.25rem;
    }

    /* Ensure icons align with inputs */
    .d-flex.align-items-center .fa-fw {
        width: 1.5em; /* Fixed width for icons for better alignment */
        text-align: center;
    }

    .d-flex.align-items-center .form-outline {
        margin-left: 0.75rem; /* Space between icon and input */
    }

    /* Specific styles for the Register button */
    .btn.bg-gradient-header {
        background-color: var(--orange-main-color);
        color: #fff;
        border: none;
    }

        .btn.bg-gradient-header:hover {
            background-color: var(--orange-main-color); /* Maintain color on hover */
            opacity: 0.9; /* Slight opacity change on hover */
        }
</style>
