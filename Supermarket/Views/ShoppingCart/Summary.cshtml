@model ShoppingCartVM

<form asp-action="SummaryPost" method="post">
    <div class="container py-4">
        <div class="card shadow-lg border-0 rounded-3">

            <div class="card-header bg-dark text-white p-4 rounded-top-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h4 class="mb-0 text-white">Order Summary</h4>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">Back to Cart</a>
                    </div>
                </div>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-12 col-lg-6">
                        <h5 class="text-primary mb-3">Shipping Details:</h5>
                        <div class="row mb-3">
                            <label for="OrderHeader_Name" class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input asp-for="OrderHeader.Name" class="form-control" id="OrderHeader_Name" />
                                <span asp-validation-for="OrderHeader.Name" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="OrderHeader_Phone" class="col-sm-3 col-form-label">Phone</label>
                            <div class="col-sm-9">
                                <input asp-for="OrderHeader.Phone" class="form-control" id="OrderHeader_Phone" />
                                <span asp-validation-for="OrderHeader.Phone" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="OrderHeader_StreetAddress" class="col-sm-3 col-form-label">Street Address</label>
                            <div class="col-sm-9">
                                <input asp-for="OrderHeader.StreetAddress" class="form-control" id="OrderHeader_StreetAddress" />
                                <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="OrderHeader_City" class="col-sm-3 col-form-label">City</label>
                            <div class="col-sm-9">
                                <input asp-for="OrderHeader.City" class="form-control" id="OrderHeader_City" />
                                <span asp-validation-for="OrderHeader.City" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="OrderHeader_State" class="col-sm-3 col-form-label">State</label>
                            <div class="col-sm-9">
                                <input asp-for="OrderHeader.State" class="form-control" id="OrderHeader_State" />
                                <span asp-validation-for="OrderHeader.State" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6">
                        <h5 class="text-primary mb-3">Order Summary:</h5>
                        <ul class="list-group mb-3 shadow-sm">
                            @foreach (var details in Model.ShoppingCartList)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="my-0">@details.Product.Name</h6>
                                        <small class="text-muted">Quantity: @details.quantity</small>
                                    </div>
                                    <span class="text-muted">@((details.price * details.quantity).ToString("c")) </span>
                                </li>
                            }

                            <li class="list-group-item d-flex justify-content-between align-items-center bg-light fw-bold">
                                <small class="text-dark">Total Amount:</small>
                                <span class="text-dark">@Model.OrderHeader.OrderTotal.ToString("c")</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light p-4 rounded-bottom-3">
                <div class="row align-items-center">
                    <div class="col-12 col-md-8">
                        <p class="text-muted mb-0" style="font-size:14px;">
                            <i class="bi bi-calendar-check me-2"></i>Estimated Arrival Date:
                            <span class="fw-bold">@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()</span>
                        </p>
                    </div>
                    <div class="col-12 col-md-4 text-end mt-3 mt-md-0">
                        <button type="submit" value="Place Order" class="btn btn-primary w-100 py-2">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
