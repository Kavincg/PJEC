@model List<Category>
@using Supermarket.RolesAndEmailSender

<div class="card shadow-lg border-0 mt-5 rounded-3">
    <div class="card-header bg-dark text-white py-2 rounded-top-3">
            <div class="col-12 text-center">
                <h2 class="py-1 fw-bold">All Categories</h2>
            </div>
    </div>
    <div class="card-body mt-2 w-100 h-100">
        <div class="container w-100 h-100">
            <div class="row g-4 h-100 w-100">
                @foreach (var category in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3" style="">
                        <a asp-controller="Product" asp-action="FindByCategory" asp-route-categoryId="@category.id" class="d-block text-decoration-none" style="width: 100%; height: 75%;">
                            <div class="card border border-1 category-card" style="width: 100%; height: 80%;">
                                <img src="/img/@category.logoUrl" class="card-img-top border border-1 w-100" alt="@category.Name" style="height: 80%;">
                                <div class="card-body text-dark text-center border border-1">
                                    <h5 class="card-title">@category.Name</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; /* Modern font stack */
        background-color: #f0f2f5; /* Lighter, modern background */
        color: #212529; /* Darker text for better readability */
        line-height: 1.6;
    }

    /* Custom styles for category cards */
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px; /* More rounded corners */
        overflow: hidden; /* Ensures content respects border-radius */
    }

        .category-card:hover {
            transform: translateY(-5px); /* Lift effect on hover */
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important; /* More pronounced shadow on hover */
        }

        .category-card .card-body {
            min-height: 180px; /* Ensure consistent card height */
        }

        .category-card .card-title {
            white-space: nowrap; /* Prevent wrapping for category name */
            overflow: hidden;
            text-overflow: ellipsis; /* Add ellipsis for long names */
            max-width: 100%; /* Ensure text-truncate works */
        }

    /* Consistent header styling */
    .card-header.bg-primary {
        background-color: #007bff !important;
        background-image: linear-gradient(to right, #0056b3, #007bff);
    }
</style>