@using Supermarket.Models
@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="card shadow-lg border-0 mt-5 mb-4 rounded-4">
    <div class="bg-gradient-header text-white py-4 px-4 rounded-top-4">
        <div class="row align-items-center">
            <div class="col-6">
                <h2 class="mb-0 text-3xl text-black font-bold">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn bg-gradient-header btn-lg shadow-sm rounded-pill px-3 py-2 text-white hover-scale-105 transition-all">
                    <i class="bi bi-plus-circle me-2"></i> Create New Category
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-header-custom text-black">
                    <tr>
                        <th class="text-black" scope="col">Category Name</th>
                        <th class="text-black" scope="col">Display Order</th>
                        <th class="text-black" scope="col">Logo</th>
                        <th class="text-black text-center" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                @if (!string.IsNullOrEmpty(obj.logoUrl))
                                {
                                    <img class="img-fluid shadow-sm rounded-3" style="width: 60px; height: 60px; object-fit: cover;" src="~/img/@obj.logoUrl" alt="Category Logo" />
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No logo</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.id" class="btn bg-gradient-header btn-sm rounded-pill px-3 py-2 shadow-sm text-white hover-scale-105 transition-all">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger btn-sm rounded-pill px-3 py-2 shadow-sm text-white hover-scale-105 transition-all">
                                        <i class="bi bi-trash-fill me-1"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Any specific JavaScript for this page can go here if needed.
    </script>
}

