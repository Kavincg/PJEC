@model Category

<div class="card shadow-lg border-0 mt-5 mb-4 rounded-4">
    <div class="bg-gradient-header text-white py-4 px-4 rounded-top-4">
        <div class="row align-items-center">
            <div class="col-12 text-center">
                <h2 class="mb-0 text-3xl text-black font-bold">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="id" hidden />

            <div class="col-12">
                <div class="form-floating py-2 mb-3">
                    <input asp-for="Name" class="form-control rounded-pill" placeholder="Category Name" />
                    <label asp-for="Name" class="ms-2">Category Name</label> 
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 mb-3">
                    <input asp-for="DisplayOrder" class="form-control rounded-pill" placeholder="Display Order" /> 
                    <label asp-for="DisplayOrder" class="ms-2">Display Order</label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 mb-4">
                    <input asp-for="logoUrl" class="form-control rounded-pill" placeholder="Logo URL" />
                    <label asp-for="logoUrl" class="ms-2">Logo URL</label> 
                    <span asp-validation-for="logoUrl" class="text-danger"></span>
                </div>

                <div class="row pt-2 justify-content-end">
                    <div class="col-12 col-md-4 col-lg-3 mb-2">
                        <button type="submit" class="btn bg-gradient-header w-100 rounded-pill px-3 py-2 shadow-sm text-white hover-scale-105 transition-all">
                            Update
                        </button>
                    </div>
                    <div class="col-12 col-md-4 col-lg-3 mb-2">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary w-100 rounded-pill px-3 py-2 shadow-sm text-white hover-scale-105 transition-all">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

